<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ct_colorPrimary</item>
        <item name="colorPrimaryDark">@color/ct_colorPrimaryDark</item>
        <item name="colorAccent">@color/ct_colorAccent</item>
    </style>

    <style name="ct_transparent_activity_theme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowAnimationStyle">@style/ct_activity_slide_animation</item>
        <item name="colorPrimary">@color/ct_colorPrimary</item>
        <item name="colorPrimaryDark">@color/ct_colorPrimaryDark</item>
        <item name="colorAccent">@color/ct_blue</item>
    </style>

    <style name="ct_activity_slide_animation">
        <item name="android:windowEnterAnimation">@anim/ct_slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/ct_slide_out_down</item>
    </style>

</resources>